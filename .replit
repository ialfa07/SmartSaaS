modules = ["nodejs-20", "python-3.12", "bash", "web"]
run = "node index.js"

[nix]
channel = "stable-23_11"

[workflows]
runButton = "Full Stack (Sequential)"

[[workflows.workflow]]
name = "Frontend Dev"
author = 44765265
mode = "sequential"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "cd frontend && npm install && npm run dev"

[[workflows.workflow]]
name = "Backend API"
author = 44765265
mode = "sequential"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "cd backend && python main.py"

[[workflows.workflow]]
name = "Full Stack Dev"
author = 44765265
mode = "parallel"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "cd frontend && npm install && npm run dev"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "cd backend && python main.py"

[[workflows.workflow]]
name = "Start Backend"
author = 44765265
mode = "sequential"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "cd backend && pip install -r requirements.txt && python main.py"

[[workflows.workflow]]
name = "Start Frontend"
author = 44765265
mode = "sequential"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "cd frontend && npm install && npm run dev"

[[workflows.workflow]]
name = "Full Stack (Sequential)"
author = 44765265
mode = "sequential"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "cd backend && pip install -r requirements.txt && python main.py &"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "sleep 5"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "cd frontend && npm install && npm run dev"

[run]
args = ["bash", "-c", "cd backend && python main.py"]

[deployment]
run = ["python", "backend/main.py"]
deploymentTarget = "cloudrun"

[[ports]]
localPort = 8000
externalPort = 80

[[ports]]
localPort = 3000
externalPort = 443

[env]
DATABASE_URL = "postgresql://postgres:password@localhost:5432/smartsaas"